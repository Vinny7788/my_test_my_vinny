using System;
using System.CodeDom;
using System.Collections.Generic;
using System.Linq;
using System.Runtime.InteropServices;
using System.Text;
using System.Threading;
using System.Threading.Tasks;

namespace School
{
    internal class Program
    {
        static void Main(string[] args)
        {
            int peopleInLine;
            int hours;
            int minutes;
            int minutesPerPeople = 10;
            int minutesPerHour = 60;
            Console.Write("Hello, how many people in line? :");
            peopleInLine = Convert.ToInt32(Console.ReadLine());
            minutes = (peopleInLine * minutesPerPeople) % minutesPerHour;
            hours = (peopleInLine * minutesPerPeople) / minutesPerHour;
            Console.WriteLine($"You have to wait {hours}hrs and {minutes}min.");
            }   
        }
    }
