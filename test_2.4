using Microsoft.Win32;
using System;

namespace School
{
    internal class Program
    {
        static void Main(string[] args)
        {
            string exitWord = "exit";
            string summaWord = "sum";
            string userInput;
            int[] mainNumbersArray = new int[1];
            int sumOfNumbers = 0;
            bool isWork = true;

            while (isWork)
            {

                Console.WriteLine("You can write the ");
                Console.WriteLine("Write the number:");
                userInput = Console.ReadLine();

                if (userInput.ToLower() == exitWord)
                {
                    isWork = false;
                }

                else if (userInput.ToLower() == summaWord)
                {

                    for (int i = 0; i < mainNumbersArray.Length; i++)
                    {
                        sumOfNumbers += mainNumbersArray[i];
                    }
                    Console.WriteLine(sumOfNumbers);
                }
                else 
                {

                    int[] tempNumbersArray = new int[mainNumbersArray.Length + 1];

                    for (int i = 0; i < mainNumbersArray.Length; i++)
                    {
                        tempNumbersArray[i] = mainNumbersArray[i];
                    }
                    tempNumbersArray[tempNumbersArray.Length - 1] += Convert.ToInt32(userInput);
                    mainNumbersArray = tempNumbersArray;
                }
            }
            Console.Clear();
            Console.WriteLine("Goodbye!!!");
        }
    }
}
