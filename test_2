using System;

namespace School
{
    internal class Program
    {
        static void Main(string[] args)
        {
            string userInput;
            bool isWork = true;
            string exitSmalLatter = "exit";
            string exitCapitalLetter = "Exit";

            while (isWork)
            {
                Console.Write("Write the message: ");
                userInput = (Console.ReadLine());
                if (userInput == exitSmalLatter || userInput == exitCapitalLetter)
                { 
                    isWork = false;
                }
                else
                { 
                    Console.WriteLine(userInput); 
                }
            }
        }
    }
}
