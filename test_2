using System;

namespace School
{
    internal class Program
    {
        static void Main(string[] args)
        {
            string userInput;
            bool userCantLeave = true;
            string exitSmalLatter = "exit", exitCapitalLetter = "Exit";

            while (userCantLeave)
            {
                Console.Write("Write the message: ");
                userInput = (Console.ReadLine());
                if (userInput == exitSmalLatter || userInput == exitCapitalLetter)
                { userCantLeave = false; }
                else
                { Console.WriteLine(userInput); }
            }
        }
    }
}
