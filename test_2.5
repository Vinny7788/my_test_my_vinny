using System;

namespace School
{
    internal class Program
    {
        static void Main(string[] args)
        {
            int zeroValue = 1;
            int maxRepley = 0;
            int repeatingNumber = 1;
            int reply = 0;

            int[] numbers = new int[30] { 1, 2, 4, 5, 3, 3, 3, 3, 3, 3, 4, 5, 6, 7, 3, 4, 5, 7, 8, 9, 6, 6, 6, 6, 6, 2, 3, 2, 2, 2 };

            for (int i = 1; i < numbers.Length; i++)
            {
                if (numbers[i] == numbers[i - zeroValue])
                {
                    reply++;

                    if (reply > maxRepley)
                    {
                        maxRepley = reply;
                        repeatingNumber = numbers[i];
                    }
                }
                else
                {
                    reply = zeroValue;
                }
            }

            Console.WriteLine(maxRepley);
            Console.WriteLine(repeatingNumber);
        }
    }
}

