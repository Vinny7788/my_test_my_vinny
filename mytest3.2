using System;

namespace School
{
    internal class Program
    {
        static void Main(string[] args)
        {
            int healthPercent = 40;
            int barLength = 10;
            int healthPosition = 1;
            int manaPercent = 30;
            int manaPosition = 2;

            DrawBar(healthPercent, barLength, ConsoleColor.Red, healthPosition, '#');
            DrawBar(manaPercent, barLength, ConsoleColor.Green, manaPosition, '#');
        }

        static void DrawBar(int prcentageOfoccupancy, int barLength, ConsoleColor color, int position, char symbol = ' ')
        {
            int divisor = 100;
            int filledCount;
            filledCount = barLength * prcentageOfoccupancy / divisor;
            string bar = "";
            ConsoleColor defaultColor = Console.BackgroundColor;

            bar = Draw(filledCount, bar, symbol);

            Console.SetCursorPosition(0, position);
            Console.Write('[');
            Console.BackgroundColor = color;
            Console.Write(bar);
            Console.BackgroundColor = defaultColor;
            bar = "";

            bar = Draw(barLength, bar, symbol, filledCount);

            Console.Write(bar + ']');
            Console.SetCursorPosition(0, 3);
        }

        static string Draw(int comparsionNumber, string bar, char symbol, int numberI = 0)
        {

            for (int i = numberI; i < comparsionNumber; i++)
            {
                bar += symbol;
            }

            return bar;
        }
    }   
}
