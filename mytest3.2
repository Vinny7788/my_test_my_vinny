using System;

namespace School
{
    internal class Program
    {
        static void Main(string[] args)
        {
            int healthPercent = 40;
            int maxHealthValue = 10;
            int healthPosition = 1;
            int manaPercent = 30;
            int maxManaValue = 10;
            int manaPosition = 2;

            DrawBar(healthPercent, maxHealthValue, ConsoleColor.Red, healthPosition, '#');
            DrawBar(manaPercent, maxManaValue, ConsoleColor.Green, manaPosition, '#');

        }
        static void DrawBar(int value, int maxValue, ConsoleColor color, int position, char symbol = ' ')
        {
            int filledCount;
            filledCount = maxValue * value / 100;
            string bar = "";
            ConsoleColor defaultColor = Console.BackgroundColor;

            for (int i = 0; i < filledCount; i++)
            {
                bar += symbol;
            }

            Console.SetCursorPosition(0, position);
            Console.Write('[');
            Console.BackgroundColor = color;
            Console.Write(bar);
            Console.BackgroundColor = defaultColor;

            bar = "";

            for (int i = filledCount; i < maxValue; i++)
            {
                bar += symbol;
            }

            Console.Write(bar + ']');
            Console.SetCursorPosition(0, 3);
        }
    }
}
